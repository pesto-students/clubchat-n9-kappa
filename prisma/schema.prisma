// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:javascript@localhost:5432/club_chat"
}

model users {
  id String @id @default(uuid())
  email String @unique
  username String @unique
  hash String
  salt String
  maxage Int
  createdAt Int
  topics usertopic[]
}
model topic {
  id String @id @default(uuid())
  name String @unique
  description String?
  createdAt DateTime  @default(now())
  topics usertopic[]
}
model usertopic {
  id String @id @default(uuid())
  user users? @relation(fields: [userId], references: [id])
  userId String
  topic topic? @relation(fields: [topicId], references: [id])
  topicId String
  messages message[]
}
model message {
  id String @id @default(uuid())
  text String
  user usertopic? @relation(fields: [usertopicId], references: [id])
  usertopicId String
  createdAt DateTime  @default(now())
}


